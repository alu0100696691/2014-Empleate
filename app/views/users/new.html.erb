<p>PAGINA PARA EL REGISTRO DE NUEVOS USUARIOS</p>

<table>
<%= form_for :user do |f| %>
<tr>
	<td>	
      		<%= f.label :name %>
      		<%= f.text_field :name %>
	</td>
</tr>
<tr>
	<td>
      		<%= f.label :email %>
      		<%= f.text_field :email %>
	</td>
</tr>
	<td>
      		<%= f.label :password %>
      		<%= f.password_field :password %>
	</td>
</tr>
<tr>
	<td>
		<%= f.label :password_confirmation, "Confirmation" %>
      		<%= f.password_field :password_confirmation %>
	</td>
</tr>
<tr>
	<td>
		<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    		<% end %>
	</td>
</tr>
</table>

